{# paragraph--cta-section.html.twig #}

<section class="relative w-full bg-[#0b2a3c] py-28 px-6 overflow-hidden crt-scanlines">
  <div class="relative z-10 max-w-5xl mx-auto text-center">

    {% if content.field_headline %}
      <h2 class="font-orbitron uppercase text-4xl sm:text-5xl font-bold text-white mb-6">
        {{ content.field_headline }}
      </h2>
    {% endif %}

    {% if content.field_block_content %}
      <div class="text-white/90 text-lg leading-relaxed max-w-3xl mx-auto mb-10">
        {{ content.field_block_content }}
      </div>
    {% endif %}

    {% if content.field_cta_primary or content.field_cta_secondary %}
      <div class="flex flex-col sm:flex-row gap-4 justify-center">

        {% if content.field_cta_primary %}
          {{ content.field_cta_primary|add_class(
            'uppercase px-8 py-4 rounded-lg
             bg-yellow-400 text-slate-900
             font-semibold tracking-wide
             hover:bg-yellow-300 transition'
          ) }}
        {% endif %}

        {% if content.field_cta_secondary %}
          {{ content.field_cta_secondary|add_class(
            'uppercase px-8 py-4 rounded-lg
             border-2 border-yellow-400
             text-yellow-400
             hover:bg-yellow-400 hover:text-slate-900
             font-semibold tracking-wide transition'
          ) }}
        {% endif %}

      </div>
    {% endif %}

  </div>
</section>
