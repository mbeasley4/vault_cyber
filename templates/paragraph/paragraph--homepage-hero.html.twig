{# paragraph--homepage-hero.html.twig #}

<section class="bg-white relative overflow-hidden">

  <div class="flex items-center">
    <div class="container mx-auto px-6
                py-12 sm:py-16 lg:py-20">

      <div class="flex flex-col-reverse lg:flex-row items-center gap-12">

        {# TEXT COLUMN #}
        <div class="w-full lg:w-3/5 flex flex-col relative z-10
                    text-center lg:text-left">

          <span class="w-20 h-2 bg-gray-800 mb-6 mx-auto lg:mx-0"></span>

          {% if content.field_headline %}
            <h1 class="font-bebas-neue uppercase
                       text-4xl sm:text-6xl lg:text-8xl
                       font-black leading-none text-gray-800">
              {{ content.field_headline }}
            </h1>
          {% endif %}

          {% if content.field_subhead %}
            <h2 class="mt-4 text-lg sm:text-xl lg:text-2xl
                       text-gray-700 max-w-xl mx-auto lg:mx-0">
              {{ content.field_subhead }}
            </h2>
          {% endif %}

          {% if content.field_cta_primary or content.field_cta_secondary %}
            <div class="flex flex-wrap justify-center lg:justify-start
                        gap-4 mt-8">

              {% if content.field_cta_primary %}
                {{ content.field_cta_primary|add_class(
                  'vault-button-primary uppercase px-6 py-3 rounded-lg bg-pink-500
                   text-white font-semibold hover:bg-pink-400 transition'
                ) }}
              {% endif %}

              {% if content.field_cta_secondary %}
                {{ content.field_cta_secondary|add_class(
                  'vault-button-secondary uppercase px-6 py-3 rounded-lg border-2 border-pink-500
                   text-pink-500 hover:bg-pink-500 hover:text-white transition'
                ) }}
              {% endif %}

            </div>
          {% endif %}
        </div>

        {# IMAGE COLUMN #}
        <div class="w-full lg:w-2/5 flex items-center justify-center">

          {% if content.field_image %}
            <div class="w-full flex justify-center">
              {{ content.field_image|add_class(
                'w-full max-w-xs sm:max-w-sm lg:max-w-md
                 max-h-[60vh] lg:max-h-[70vh]
                 object-contain'
              ) }}
            </div>
          {% endif %}

        </div>

      </div>
    </div>
  </div>

</section>
