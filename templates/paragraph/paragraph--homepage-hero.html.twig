{# paragraph--homepage-hero.html.twig #}

<section class="relative overflow-hidden
               bg-gradient-to-br from-vault-dark via-black to-vault-dark
               text-vault-light">

  {# Subtle scanline overlay #}
  <div class="pointer-events-none absolute inset-0 opacity-10
              bg-[linear-gradient(transparent_95%,rgba(0,0,0,0.2)_100%)]
              bg-[length:100%_4px]"></div>

  <div class="flex items-center">
    <div class="container mx-auto px-6 py-12 sm:py-16 lg:py-20">

      <div class="flex flex-col-reverse lg:flex-row items-center gap-12">

        {# TEXT COLUMN #}
        <div class="w-full lg:w-3/5 flex flex-col relative z-10
                    text-center lg:text-left">

          <span class="inline-block mb-4 px-3 py-1 text-xs tracking-widest
                       bg-black border border-vault-green text-vault-green
                       shadow-[0_0_8px_rgba(57,255,20,0.7)]">
            SYSTEM STATUS: ONLINE
          </span>

          <span class="w-24 h-1 mb-6 mx-auto lg:mx-0
                       bg-vault-green shadow-[0_0_12px_#39ff14] block"></span>

          {% if content.field_headline %}
            <h1 class="font-orbitron uppercase
                       text-4xl sm:text-5xl lg:text-7xl
                       font-black leading-none tracking-wider
                       text-vault-light
                       drop-shadow-[0_0_12px_rgba(57,255,20,0.6)]">
              {{ content.field_headline }}
            </h1>
          {% endif %}

          {% if content.field_subhead %}
            <h2 class="font-orbitron mt-6 text-lg sm:text-xl lg:text-2xl
                       text-vault-lightMuted max-w-xl mx-auto lg:mx-0
                       drop-shadow-[0_0_6px_rgba(57,255,20,0.35)]">
              {{ content.field_subhead }}
            </h2>
          {% endif %}

          {% if content.field_cta_primary or content.field_cta_secondary %}
            <div class="flex flex-wrap justify-center lg:justify-start
                        gap-4 mt-8">

              {% if content.field_cta_primary %}
                {{ content.field_cta_primary|add_class(
                  'vault-button-primary uppercase px-7 py-3 rounded-lg
                   bg-vault-yellow text-black font-extrabold tracking-wide
                   border-2 border-black
                   shadow-[0_0_0_2px_#000,0_0_15px_rgba(250,204,21,0.8)]
                   hover:shadow-[0_0_20px_rgba(250,204,21,1)]
                   hover:scale-[1.02] transition'
                ) }}
              {% endif %}

              {% if content.field_cta_secondary %}
                {{ content.field_cta_secondary|add_class(
                  'vault-button-secondary uppercase px-7 py-3 rounded-lg
                   border-2 border-vault-green text-vault-green
                   hover:bg-vault-green hover:text-black
                   shadow-[0_0_10px_rgba(57,255,20,0.6)]
                   transition'
                ) }}
              {% endif %}

            </div>
          {% endif %}
        </div>

        {# IMAGE COLUMN #}
        <div class="w-full lg:w-2/5 flex items-center justify-center">

          {% if content.field_image %}
            <div class="relative w-full flex justify-center
                        before:absolute before:inset-0
                        before:rounded-xl before:border-2 before:border-vault-green
                        before:shadow-[0_0_25px_rgba(57,255,20,0.5)]
                        before:opacity-70">

              {{ content.field_image|add_class(
                'relative w-full max-w-xs sm:max-w-sm lg:max-w-md
                 max-h-[60vh] lg:max-h-[70vh]
                 object-contain
                 drop-shadow-[0_0_30px_rgba(57,255,20,0.6)]'
              ) }}

            </div>
          {% endif %}

        </div>

      </div>
    </div>
  </div>

</section>