{# paragraph--interior-hero.html.twig #}

<main class="dark:bg-gray-800 bg-white relative overflow-hidden">

  <div class="bg-white dark:bg-gray-800 flex relative z-20 items-center overflow-hidden">
    <div class="container mx-auto px-6 flex relative py-12 h-[460px]">

      {# LEFT TEXT COLUMN #}
      <div class="sm:w-2/3 lg:w-3/5 flex flex-col justify-center relative z-20">

        <span class="w-16 h-2 bg-gray-800 mb-8"></span>

        {% if content.field_headline %}
          <h1 class="font-bebas-neue uppercase text-5xl sm:text-6xl font-black leading-none text-gray-800">
            {{ content.field_headline }}
          </h1>
        {% endif %}

        {% if content.field_subhead %}
          <h2 class="text-2xl text-gray-800 mt-3">
            {{ content.field_subhead }}
          </h2>
        {% endif %}

      </div>

      {# RIGHT IMAGE COLUMN #}
      <div class="hidden sm:block sm:w-1/3 lg:w-2/5 relative flex items-center justify-center">
        {% if content.field_image %}
          <div class="w-full h-full flex items-center justify-center">
            {{ content.field_image|add_class('max-w-full max-h-full rounded-xl overflow-hidden m-8 object-contain object-center') }}
          </div>
        {% endif %}
      </div>

    </div>
  </div>

</main>
