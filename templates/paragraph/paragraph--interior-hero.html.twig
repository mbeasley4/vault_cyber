{# paragraph--interior-hero.html.twig #}

<section class="bg-white dark:bg-gray-800 relative overflow-hidden">

  <div class="relative z-20">
    <div class="container mx-auto px-6 py-12">

      <div class="flex flex-col sm:flex-row items-center gap-8 min-h-[320px] sm:min-h-[420px]">

        {# LEFT TEXT COLUMN #}
        <div class="w-full sm:w-2/3 lg:w-3/5 flex flex-col justify-center relative z-20 text-center sm:text-left">

          <span class="w-12 h-1 bg-gray-800 mx-auto sm:mx-0 mb-6"></span>

          {% if content.field_headline %}
            <h1 class="font-orbitron uppercase
                       text-4xl sm:text-5xl lg:text-6xl
                       font-black leading-none text-gray-800">
              {{ content.field_headline }}
            </h1>
          {% endif %}

          {% if content.field_subhead %}
            <h2 class="font-orbitron text-lg sm:text-xl lg:text-2xl text-gray-700 mt-3 max-w-xl mx-auto sm:mx-0">
              {{ content.field_subhead }}
            </h2>
          {% endif %}

        </div>

        {# RIGHT IMAGE COLUMN #}
        <div class="hidden sm:flex sm:w-1/3 lg:w-2/5 items-center justify-center">

          {% if content.field_image %}
            <div class="w-full max-w-sm lg:max-w-md">
              {{ content.field_image|add_class(
                'w-full h-auto object-contain rounded-xl'
              ) }}
            </div>
          {% endif %}

        </div>

      </div>

    </div>
  </div>

</section>
