<!DOCTYPE html>
<html{{ html_attributes.addClass('h-full') }}>
  <head>
    <head-placeholder token="{{ placeholder_token }}">
    <title>{{ head_title|safe_join(' | ') }}</title>
    <css-placeholder token="{{ placeholder_token }}">
    <js-placeholder token="{{ placeholder_token }}">
  </head>
  <body{{ attributes.addClass('min-h-full bg-slate-950 text-slate-100') }}>
    
    <a href="#main-content"
       class="sr-only focus:not-sr-only focus:absolute focus:top-3 focus:left-3 bg-black text-white px-3 py-2 rounded">
      Skip to content
    </a>

    {{ page_top }}
    {{ page }}
    {{ page_bottom }}

    <js-bottom-placeholder token="{{ placeholder_token }}">
  </body>
</html>
