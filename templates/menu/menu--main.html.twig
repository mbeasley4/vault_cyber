{# templates/menu/menu--main.html.twig #}

<nav>
  <div class="w-full py-2 border-b border-slate-800">

    <div class="flex justify-between px-20 items-center font-semibold">

      {# LOGO from Drupal theme settings #}
      <div>
        <a href="{{ path('<front>') }}">
          <img src="{{ site_logo }}" alt="{{ site_name }}" class="h-20 w-auto">
        </a>
      </div>

      {# MENU LINKS #}
      <div class="flex xl:gap-10 md:gap-8 gap-2">

        {% for item in items %}
          <a 
            href="{{ item.url }}" 
            class="
              hover:text-pink-500 transition
              {% if item.in_active_trail %} text-pink-500 {% endif %}
            "
          >
            {{ item.title }}
          </a>
        {% endfor %}

      </div>

    
    </div>
  </div>
</nav>
