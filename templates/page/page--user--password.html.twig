{# page--user--login.html.twig #}
<div class="min-h-screen flex flex-col">

  {% if page.header %}
    <header class="sticky top-0 z-50 bg-white border-b border-white/20">
      <div class="w-full px-6 py-4 text-black">
        {{ page.header }}
      </div>
    </header>
  {% endif %}

  <div class="flex-1 w-full grid gap-8 md:grid-cols-12">
      <main id="main-content" class="md:col-span-12">
          <h1 class="text-4xl uppercase font-bold text-center mt-8 mb-2 text-slate-900">
            Forget your password?
          </h1>
          {{ page.content }}
          <div class="mt-6 text-center">
            <a
              href="{{ path('user.login') }}"
              class="text-sm text-pink-500 hover:text-pink-600 transition"
            >
              Return to login.
            </a>
          </div>
      </main>
  </div>

  {% if page.footer %}
    <footer class="border-t border-slate-800 bg-slate-900">
      <div class="px-6 py-6 text-sm text-slate-400">
        {{ page.footer }}
      </div>
    </footer>
  {% endif %}

</div>